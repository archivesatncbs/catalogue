<% sub_report_data = sub_report_data_stack.last %>

<% sub_report_data.each do |item| %>
  <div class="sub-report-item">
    <% item.each do |key, value| %>
      <% next if value.respond_to?(:empty?) && value.empty? %>
      <% if value.kind_of?(Array) %>
        <dt><%= t(key) %></dt>
        <br/>
        <%= show_in_list(value) %>
      <% elsif value %>
        <% unless key.to_s[0] == '_' %>
          <dt><%= t(key) %></dt>
        <% end %>
        <dd><%= value %></dd>
      <% end %>
    <% end %>
  </div>
<% end %>